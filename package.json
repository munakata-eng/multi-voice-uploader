{
  "name": "voice-uploader-tool",
  "version": "1.0.0",
  "description": "Voice Uploader Tool - 音声ファイルの文字起こしとアップロード管理ツール",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder"
  },
  "keywords": [
    "electron",
    "audio",
    "transcription",
    "voice-uploader"
  ],
  "author": "Munakata",
  "license": "MIT",
  "devDependencies": {
    "electron": "^32.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "fs-extra": "^11.0.0",
    "tailwindcss": "^3.4.0",
    "puppeteer": "^22.0.0"
  },
  "build": {
    "appId": "com.munakata.voice-uploader-tool",
    "productName": "MultiVoiceUploader",
    "artifactName": "${name}-${version}-${arch}.${ext}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer/**/*",
      "package.json",
      "icon.png",
      "transcribe_audio_local.py",
      "assets/**/*"
    ],
    "asarUnpack": [
      "transcribe_audio_local.py"
    ],
    "mac": {
      "icon": "icon.png",
      "extendInfo": {
        "CFBundleDisplayName": "音声登録できるくん"
      }
    },
    "win": {
      "icon": "icon.png"
    },
    "linux": {
      "icon": "icon.png"
    }
  }
}